<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techkid.bachcx.homework1.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="3">
        <TextView
            android:text="25x32"
            android:textSize="20dp"
            android:gravity="center|end"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:text="800"
            android:textSize="50dp"
            android:gravity="center|end"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_percen"
            android:layout_margin="@dimen/margindefault"
            android:text="%"
            android:textColor="@color/colorWhile"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderoval"
            android:layout_height="@dimen/button" />
        <TextView
            android:id="@+id/tv_de"
            android:layout_margin="@dimen/margindefault"
            android:text="/"
            android:textColor="@color/colorWhile"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderoval"
            android:layout_height="@dimen/button"
            android:layout_toRightOf="@id/tv_percen"/>
        <TextView
            android:id="@+id/multi"
            android:layout_margin="@dimen/margindefault"
            android:text="X"
            android:textColor="@color/colorWhile"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderoval"
            android:layout_height="@dimen/button"
            android:layout_toRightOf="@id/tv_de"/>
        <ImageButton
            android:id="@+id/back"
            android:src="@drawable/ic_backspace_black_24dp"
            android:layout_margin="@dimen/margindefault"
            android:layout_width="@dimen/button"
            android:background="@drawable/roundovalred"
            android:layout_height="@dimen/button"
            android:layout_toRightOf="@id/multi"/>
        <TextView
            android:id="@+id/bay"
            android:layout_margin="@dimen/margindefault"
            android:text="7"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/tv_percen"/>
        <TextView
            android:id="@+id/tam"
            android:layout_margin="@dimen/margindefault"
            android:text="8"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/tv_de"
            android:layout_toRightOf="@id/bay"/>
        <TextView
            android:id="@+id/chin"
            android:layout_margin="@dimen/margindefault"
            android:text="9"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/multi"
            android:layout_toRightOf="@id/tam"/>
        <TextView
            android:id="@+id/tru"
            android:layout_margin="@dimen/margindefault"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/back"
            android:layout_toRightOf="@id/chin"/>
        <TextView
            android:id="@+id/bon"
            android:layout_margin="@dimen/margindefault"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/bay"/>
        <TextView
            android:id="@+id/nam"
            android:layout_margin="@dimen/margindefault"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/tam"
            android:layout_toRightOf="@id/bon"/>
        <TextView
            android:id="@+id/sau"
            android:layout_margin="@dimen/margindefault"
            android:text="6"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/chin"
            android:layout_toRightOf="@id/nam"/>
        <TextView
            android:id="@+id/cong"
            android:layout_margin="@dimen/margindefault"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/tru"
            android:layout_toRightOf="@id/sau"/>
        <TextView
            android:id="@+id/mot"
            android:layout_margin="@dimen/margindefault"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/bon"/>
        <TextView
            android:id="@+id/hai"
            android:layout_margin="@dimen/margindefault"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/nam"
            android:layout_toRightOf="@id/mot"/>
        <TextView
            android:id="@+id/ba"
            android:layout_margin="@dimen/margindefault"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/sau"
            android:layout_toRightOf="@id/hai"/>
        <TextView
            android:id="@+id/khong"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="134dp"
            android:height="@dimen/button"
            android:background="@drawable/rounderrectanglewhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/mot"
            android:layout_marginLeft="@dimen/margindefault"
            android:layout_marginRight="@dimen/margindefault"
            android:layout_marginTop="@dimen/margindefault"
            android:layout_marginBottom="@dimen/margindefault"
            android:layout_toStartOf="@+id/ba" />
        <TextView
            android:id="@+id/cham"
            android:layout_margin="@dimen/margindefault"
            android:text="."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:background="@drawable/rounderovalwhite"
            android:layout_height="@dimen/button"
            android:layout_below="@id/ba"
            android:layout_toRightOf="@id/khong"/>
        <TextView
            android:id="@+id/bang"
            android:text="="
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_width="@dimen/button"
            android:layout_height="800dp"
            android:background="@drawable/rounderrectanglegreen"
            android:layout_below="@id/cong"
            android:layout_toRightOf="@id/ba"
            android:layout_marginLeft="@dimen/margindefault"
            android:layout_marginRight="@dimen/margindefault"
            android:layout_marginTop="@dimen/margindefault"
            android:layout_alignBottom="@+id/cham" />
    </RelativeLayout>


</LinearLayout>
